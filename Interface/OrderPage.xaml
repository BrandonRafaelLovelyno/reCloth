<Page x:Class="Interface.OrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Interface"
      mc:Ignorable="d" 
      d:DesignHeight="1198" d:DesignWidth="1438"
      Title="OrderPage"
      Background="#FDF4EB"
      >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical" Grid.Column="1">
        <TextBlock Text="Order" FontWeight="Bold" FontSize="25" Margin="0 50 0 0" />
        <Border Background="White" 
                BorderBrush="#9E9E9E" 
                BorderThickness="1" 
                CornerRadius="5" 
                Margin="0 40 0 0">
                <StackPanel Margin="10" Orientation="Vertical">
                    <StackPanel Orientation="Vertical" Margin="0 0 0 10">
                        <TextBlock Text="Title" FontWeight="Bold" FontSize="15" Margin="0 0 0 3"/>
                        <TextBlock Text="{Binding Title}" FontSize="12" FontWeight="SemiBold" />
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="0 0 0 10">
                        <TextBlock Text="Spesification" FontWeight="Bold" FontSize="15" Margin="0 0 0 3"/>
                        <TextBlock Text="{Binding OrderSpecification}" FontSize="12" FontWeight="SemiBold" />
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="0 0 0 10">
                        <TextBlock Text="Image" FontWeight="Bold" FontSize="15" Margin="0 0 0 3"/>
                        <TextBlock Text="{Binding OrderImage}" FontSize="12" FontWeight="SemiBold" />
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="0 0 0 10">
                        <TextBlock Text="Budget" FontWeight="Bold" FontSize="15" Margin="0 0 0 3"/>
                        <TextBlock Text="{Binding OrderBudget}" FontSize="12" FontWeight="SemiBold"  />
                    </StackPanel>
                </StackPanel>
            </Border>
            
        <Border Background="White" 
                BorderBrush="#9E9E9E" 
                BorderThickness="1" 
                CornerRadius="5" 
                Margin="0 40 0 0">
                <StackPanel Margin="10" Orientation="Vertical">
                    <StackPanel Orientation="Vertical" Margin="0 0 0 10">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Label  Content="&#xf007;" FontFamily="./#Font Awesome 6 Free Solid 6 Free Solid" FontSize="15"/>
                            <TextBlock Text="Customer" FontWeight="Bold" FontSize="15" Margin="5 0 0 0"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 0 3">
                        <TextBlock Text="Name :" FontWeight="SemiBold" FontSize="12"/>
                        <TextBlock Text="{Binding CustomerName}" FontSize="12" Margin="3 0 0 0"  FontWeight="SemiBold"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            <Border Background="White" 
              BorderBrush="#9E9E9E" 
              BorderThickness="1" 
              CornerRadius="5" 
              Margin="0 40 0 0">
                <StackPanel Margin="10" Orientation="Vertical">
                    <StackPanel Orientation="Vertical" Margin="0 0 0 10">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Label  Content="&#xf304;" FontFamily="./#Font Awesome 6 Free Solid 6 Free Solid" FontSize="15"/>
                            <TextBlock Text="Designer" FontWeight="Bold" FontSize="15" Margin="5 0 0 0"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 0 3">
                        <TextBlock Text="Name :" FontSize="12" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding DesignerName}" FontSize="12" Margin="3 0 0 0" FontWeight="SemiBold" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 0 3">
                        <TextBlock Text="Order Process :" FontWeight="SemiBold" FontSize="12"/>
                        <TextBlock Text="{Binding DesignerOrderProcess}" Foreground="#A5B68D" FontWeight="Bold" FontSize="12" Margin="3 0 0 0" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 0 3">
                        <TextBlock Text="Result :" FontSize="12" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding DesignerResult}" FontSize="12" Margin="3 0 0 0" FontWeight="SemiBold" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 0 3">
                        <TextBlock Text="Payment :" FontSize="12" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding DesignerPayment}"  FontSize="12" Margin="3 0 0 0" FontWeight="SemiBold" />
                    </StackPanel>
                </StackPanel>
            </Border>
            <Border Background="White" 
             BorderBrush="#9E9E9E" 
             BorderThickness="1" 
             CornerRadius="5" 
             Margin="0 40 0 0">
                <StackPanel Margin="10" Orientation="Vertical">
                    <StackPanel Orientation="Vertical" Margin="0 0 0 10">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Label  Content="&#xf304;" FontFamily="./#Font Awesome 6 Free Solid 6 Free Solid" FontSize="15"/>
                            <TextBlock Text="Designer" FontWeight="Bold" FontSize="15" Margin="5 0 0 0"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 0 3">
                        <TextBlock Text="Name :" FontSize="12" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding TaylorName}" FontSize="12" Margin="3 0 0 0" FontWeight="SemiBold" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 0 3">
                        <TextBlock Text="Order Process :" FontWeight="SemiBold" FontSize="12"/>
                        <TextBlock Text="{Binding TaylorOrderProcess}" Foreground="#BD6D68" FontWeight="Bold" FontSize="12" Margin="3 0 0 0" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 0 3">
                        <TextBlock Text="Result :" FontSize="12" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding TaylorResult}" FontSize="12" Margin="3 0 0 0" FontWeight="SemiBold" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 0 3">
                        <TextBlock Text="Payment :" FontSize="12" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding TaylorPayment}"  FontSize="12" Margin="3 0 0 0" FontWeight="SemiBold" />
                    </StackPanel>
                </StackPanel>
            </Border>
            <Grid HorizontalAlignment="Stretch" Margin="0 50 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <!-- Width for left button -->
                    <ColumnDefinition Width="*"/>
                    <!-- Takes up all available space between the buttons -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Width for right button -->
                </Grid.ColumnDefinitions>

                <!-- Left Button -->
                <Border Grid.Column="0" Width="200" Background="#87ABB4" Padding="10 5 10 5" CornerRadius="12">
                    <TextBlock Text="Show Proposal" MouseLeftButtonDown="Route_to_Form" FontSize="20" FontWeight="Regular" Foreground="White" HorizontalAlignment="Center"/>
                </Border>

                <!-- Right Button -->
                <Border Grid.Column="2" Width="122" Background="#FF5630" Padding="10 5 10 5" CornerRadius="12">
                    <TextBlock Text="Delete" FontSize="20" FontWeight="Regular" Foreground="White" HorizontalAlignment="Center"/>
                </Border>
            </Grid>
        </StackPanel>
    </Grid>

</Page>
